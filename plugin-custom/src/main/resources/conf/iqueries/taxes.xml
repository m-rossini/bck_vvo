				table="prc_tax_category"		type="long"			
				visible="false"/>
		<column name="tax_category_id"
				table="prc_tax_rate"    	    type="long"			
				visible="false"/>
		<column name="tax_code"                 display-name="Categoria TarifÃ¡ria"
				table="prc_tax_category"		type="varchar"			
