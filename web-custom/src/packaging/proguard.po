-libraryjars "@[auster:facelift-core]@"
-libraryjars "@[auster:security]@"
-libraryjars "@[java.home]@/lib/rt.jar"
-libraryjars "@[auster:minerva-interfaces]@"(!br/com/auster/**/test/**)
-libraryjars "@[com.google.gwt:gwt-servlet]@"
